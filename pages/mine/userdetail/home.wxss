/* pages/home/home.wxss */
@import "../../../component/worksListCell/worksListCell.wxss";

page {
  height: 100%;
  width: 100%;
  background-color: #f2f2f2;
}
.userInfo-view {
  background-color: #fff;
  margin: 14rpx 32rpx 0;
  height: 340rpx;
  border-top-left-radius: 60rpx;
}
.person-view {
  display: inline-block;
  margin-bottom: 81rpx;
}
.person-view image {
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 21rpx;
}
.person-child-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 49rpx;
}
.name-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.name-view text {
  font-size: 34rpx;
  color: #333;
}
.name-view image {
  margin-left: 12rpx;
  width: 30rpx;
  height: 30rpx;
}
.id-view {
  margin-top: 0;
  color: #333;
  font-size: 22rpx;
}
.attribute-view {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-left: 70rpx;
  margin-right: 70rpx;
}
.data-view {
  display: flex;
  flex-direction: column;
}
.data-view .top-text {
  color: #acacac;
  font-size: 22rpx;
}
.data-view .bottom-text {
  color: #333;
  font-size: 30rpx;
}
.tabs-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-left: 32rpx;
  font-size: 28rpx;
  height: 121rpx;
  line-height: 121rpx;
  align-items: center;
}
.tabs-view .tab {
  color: #000;
  opacity: 0.6;
}
.tabs-view .active {
  color: #000;
  opacity: 0.9;
}
.swiper{
  display: block; 
  width: 100%; 
  overflow: hidden;
  margin: 0;
  border: 0;
  background-color: #f2f2f2;
}
.scrollView{
  height: 100%;
  background-color: #f2f2f2;
}