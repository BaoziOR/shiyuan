/* pages/mine/fans/fans.wxss */
.fans {
  width: 100vw;
  padding: 24rpx 0;
}
.list {
  width: 88%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin: 0 auto 24rpx auto;
}
.head-phone {
  width: 100rpx;
  height: 100rpx;
  background-color: #000;
  border-radius: 100%;
  overflow: hidden;
}
.image {
  width: 100%;
  height: 100%;
}
.name {
  flex: 1;
  font-size: 28rpx;
  padding: 0 24rpx;
}
.switch {
  padding-right: 24rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}